#include <stdio.h>
#include <stdlib.h>

int main()
{
    FILE *Arq;
    Arq = fopen("Texto.txt", "rt");
    char plv[50], palavra[50];
    int i, a, b;
    a= 0;

     printf(" de a palavra que buscas q eu te indico a linha q ela esta\n");
     fflush(stdin);
     fgets(plv, 50, stdin);
    for( ; ; )
    {
        b=0;
        for( i=a ; ; i++ )
        {
            b++;
            a++;
            fscanf (Arq, "%s", palavra);
            plv[i] = palavra[i];
            if( plv[i] != palavra[i])
            {
                a++;
                break;
            }
            if (plv[i] == '\0')
            {
                break;
            }
        }
    if (plv[i] == '\0')
        {
            break;
        }
    }

    for( i= (a-b); i<=a ; i++ )
    {
        printf("%c", plv[i]);
    }

    return 0;
}
